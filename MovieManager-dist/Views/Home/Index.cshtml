@model User
@using MovieManager.Models 

@{
    ViewBag.Title = "Home Page";


    string imageUrl = "../Content/Images/pxfuel.jpg";

    if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        Html.ValidationSummary(false, "", new { @class = "text-danger" });
    }
}
<div class="loginContainer my-auto">
    <div class="text-white">

        <form action="@Url.Action("Login","Home")" method="post">

            <h1>Movie Manager</h1>

            <h3 class="mt-3">Login</h3>

            <div class="row mt-3">
                @Html.LabelFor(model => model.Username)
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col">                   
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control form-control-lg" })
                </div>               
            </div>
            
            <div class="row mt-3">
                @Html.LabelFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-lg", type = "password" })
                </div>
            </div>

            <button class="btn btn-lg btn-primary mt-4" type="submit">Login</button>

        </form>

    </div>

    <div class="row">

    </div>
</div>

<script>
    document.querySelector("body").style.backgroundImage = "linear-gradient(to right, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0)), url(@imageUrl)";
    document.querySelector("#main-content").classList.add("align-middle");
</script>
